{
  "name": "network-scanner",
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "env": {
    "SUPABASE_URL": {
      "description": "Supabase project URL (optional)"
    },
    "SUPABASE_KEY": {
      "description": "Supabase API key (optional)"
    }
  },
  "routes": [
    {
      "src": "/api/scan",
      "dest": "api/scan.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(?P<path>.*)",
      "dest": "public/$path"
    }
  ],
  "functions": {
    "api/scan.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  }
}
